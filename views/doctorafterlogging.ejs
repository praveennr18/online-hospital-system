<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Dashboard</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            color: #333;
        }

        header {
            background-color: #3498db;
            color: white;
            text-align: center;
            padding: 1em;
        }

        h1 {
            margin: 0;
        }

        main {
            max-width: 800px;
            margin: 20px auto;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        section {
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #fff;
        }

        h3 {
            color: #3498db;
        }

        p {
            color: #777;
        }
        textarea {
            width: 100%;
            padding: 5px;
            margin-bottom: 10px;
        }

        input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #45a049;
        }

        p {
            margin: 0;
        }
    </style>
</head>
<body>
    <header>
        <h1>Doctor Dashboard</h1>
    </header>

    <main>
        <% if (patientData.length > 0) { %>
            <% patientData.forEach(function(data) { %>
                <section>
                    <h3>Problem ID: <%= data.problem_id %></h3>
                    <p>Problem: <%= data.problem %></p>
                </section>
            <% }); %>
            <form action="/submit-doctor-response" method="post">
              <label for="response" style="margin-left: 50px;">problem id          :</label>
              <input type="text" id="problem_id" name="problem_id" required> <br>
              <br>
              
              <label for="response">Doctor's Response:</label>
              
              <input type="text" id="response" style="width: 400px; height: 80px; " name="response"  required>
              <br>
              <br>
              <input type="submit"  value="Submit Response" style="margin-left: 130px;" required>
          </form>
        <% } else { %>
            <p>No patient data available.</p>
        <% } %>
    </main>
</body>
</html>



